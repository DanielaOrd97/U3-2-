@model BurgerU3.Models.ViewModels.PromocionesViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "Layout";
}

<section class="menu1">
    <img src="~/hamburguesas/@(Model.menu.Id).png" />
    <div class="datos">
        <h3>
            <del>@Model.menu.Precio</del>
            <b>@Model.menu.PrecioPromocion</b>
        </h3>
        <h2>@Model.menu.Nombre</h2>
        <p>@Model.menu.Descripción</p>
    </div>
    <span>
        @if(Model.Index > 0)
        {
            <a href="~/Home/VerPromociones/@(Model.Index-1)">&lt;</a>
        }
        @if(Model.Index < Model.Tamano - 1)
        {
            <a href="~/Home/VerPromociones/@(Model.Index+1)">&gt;</a>
        }

    </span>
</section>
